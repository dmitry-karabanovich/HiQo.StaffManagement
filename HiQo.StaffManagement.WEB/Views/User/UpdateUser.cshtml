@model HiQo.StaffManagement.Domain.EntitiesDto.UserDto
@{
    ViewBag.Title = "UpdateUser";
}

<html>
<head>
    <title>@ViewBag.Title </title>
</head>
<body>
<div class=" panel panel-default" style="width: 400px">
    <div class="panel-heading alert-danger h4">
        @if (Model == null)
        {
            <text>Create new user</text>
        }
        else
        {
            <text>Update user</text>
        }
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @using (Html.BeginForm("EditUser", "User", FormMethod.Post))
                    {
                    @Html.LabelFor(user => user.FirstName, "First name:")
                        <p>@Html.EditorFor(user => user.FirstName, new {htmlAttributes = new {@class = "form-control"}}) </p>
                    @Html.LabelFor(user => user.LastName, "Last name:")
                        <p>@Html.EditorFor(user => user.LastName, new { htmlAttributes = new { @class = "form-control" } })</p>
                    @Html.LabelFor(user => user.DateBirth, "Date of birth")
                    @*<p>@Html.EditorFor(user => user.DateBirth, new {htmlAttributes = new {@class = "datepicker",@type="date",@value=Model.DateBirth.ToString("yyyy/MM/dd") }})</p>*@
                        <p>@Html.TextBoxFor(user => user.DateBirth, new {@class="datepicker"})</p>   
                                                                                                                           
                    }

                </div>
            </div>
        </div>


    </div>
</div>

</body>
</html>